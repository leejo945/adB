<?xml version="1.0" encoding="utf-8"?>
<cn.com.paioo.app.view.PullToRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/desk_to_pushrefresh"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

<cn.com.paioo.app.view.AutoLoadMoreGridView
            android:scrollbars="none" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:horizontalSpacing="10dp"
            android:id="@+id/desk_ad_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:numColumns="2"
                  android:paddingBottom="70dp"
             >
     </cn.com.paioo.app.view.AutoLoadMoreGridView>
    </LinearLayout>

</cn.com.paioo.app.view.PullToRefreshView>