<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_root_rl"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/title_bar_bg" >

    <ImageButton
        android:id="@+id/title_bar_back_ib"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/selector_title_bar_back"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_bar_slidemenu_ib"
        style="@style/title_iv_left"
        android:background="@drawable/selector_title_bar_slidemenu" />

    <TextView
        android:id="@+id/title_bar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_large" />

    <ImageButton
        android:id="@+id/title_bar_qrcode_ib"
        style="@style/title_iv_right"
        android:background="@drawable/selector_title_bar_qrcode" />

</RelativeLayout>