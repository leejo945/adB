<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@color/app_bg"
     
        android:padding="10dp" >

    <TextView
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/warn_dialog_update"
        android:textSize="@dimen/textSize_large" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange" >
    </LinearLayout>

    <TextView
            android:textColor="@android:color/black"
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
         >

        <Button
            android:layout_weight="1"
            
          android:id="@+id/dialog_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginRight="10dp"
            android:background="@drawable/selector_bt_orange"
            android:text="@string/warn_dialog_sureupdate" />

        <Button
            android:layout_weight="1"
            
            android:id="@+id/dialog_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bt_white"
            android:text="@string/warn_dialog_cancle" />
</LinearLayout>

</LinearLayout>