<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/preview_detailed_temp_img"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_preview_point" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_preview_point" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_preview_point" />
            </LinearLayout>

            <TextView
                android:padding="5dp"
                android:textSize="@dimen/textSize_large_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013什么乱七八糟的春晓秋冬装"
                android:textStyle="bold" />

            <TextView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 
                android:text="2013什么乱七八糟的春晓秋  3什么晓秋冬装2013什么乱七八糟的春晓秋冬装2013什么乱七八糟的春晓秋冬装" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ff0000"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天河城店"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textSize_large_"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天河什么区什么县什么玩意" />

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        
                        android:id="@+id/imageView2"
                        style="@style/preview_detailed_buttom"
                        android:src="@drawable/preview_detailed_cbd" />

                    <ImageView 
                          
                        android:id="@+id/imageView1"
                      style="@style/preview_detailed_buttom"
                        android:src="@drawable/preview_detailed_bus" />

                    <ImageView
                          
                        android:id="@+id/imageView3"
                          style="@style/preview_detailed_buttom"
                        android:src="@drawable/preview_detailed_business_home" />

                    <ImageView
                           
                        android:id="@+id/imageView4"
                    style="@style/preview_detailed_buttom"
                        android:src="@drawable/preview_detailed_time" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>