<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recommend_number_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_re_number" />

                <TextView
                    
                        style="@style/comm_money_orange"
                    android:id="@+id/textView1"
                   
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/find_friends_install_app1"
                    android:textSize="@dimen/textSize_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/recommend_friends_share_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:button="@null"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/recommend_friends"
                    android:onClick="onClick"
                    android:text="推荐好友"
                    android:textSize="@dimen/textSize_small" />

                <RadioButton
                    android:id="@+id/recommend_friends_copy_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/recommend_copy_link"
                    android:onClick="onClick"
                    android:text="复制链接"
                    android:textSize="@dimen/textSize_small" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/recommend_qrcode_bg"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/recommend_qrcode" />
            </RelativeLayout>

            <TextView
                android:layout_marginTop="10dp"
                   android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qrcode_re" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>